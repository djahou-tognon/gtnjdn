<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in publications %}
    <li class="list-group-item">
      <div class="row">
        <!-- Colonne pour la date -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.releaseDate %} {% assign date = content.releaseDate | split: '-' | join: '.' %} {% else %} {% assign date = '' %} {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ date }}</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        
        <!-- Colonne pour les détails de la publication -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.title }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.journal }} {{ content.volume }} ({{ content.issue }}), {{ content.pages }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.abstract }}</h6>
          
          <!-- Afficher l'URL -->
          {% if content.url %}
            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              URL: <a href="{{ content.url }}" target="_blank">{{ content.url }}</a>
            </p>
          {% endif %}
          
          <!-- Afficher le lien HTML -->
          {% if content.html %}slide={https://example.com/slide.pdf}

            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              HTML: <a href="{{ content.html }}" target="_blank">Lire en ligne</a>
            </p>
          {% endif %}
          
          <!-- Afficher le lien PDF -->
          {% if content.pdf %}
            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              PDF: <a href="{{ content.pdf }}" target="_blank">Télécharger le PDF</a>
            </p>
          {% endif %}
          
          <!-- Afficher la vidéo -->
          {% if content.video %}
            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              Vidéo: <a href="{{ content.video }}" target="_blank">Voir la vidéo</a>
            </p>
          {% endif %}
          
          <!-- Afficher la diapositive -->
          {% if content.slide %}
            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              Diapositive: <a href="{{ content.slide }}" target="_blank">Voir la diapositive</a>
            </p>
          {% endif %}
          
          <!-- Afficher des informations supplémentaires -->
          {% if content.additional_info %}
            <p class="ml-1 ml-md-4" style="font-size: 0.9rem;">
              Informations supplémentaires: {{ content.additional_info }}
            </p>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
